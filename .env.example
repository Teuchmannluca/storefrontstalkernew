# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Keepa API Configuration (Optional - for product scraping)
KEEPA_API_KEY=your-keepa-api-key

# Amazon SP-API Credentials
AMAZON_ACCESS_KEY_ID=your-amazon-client-id
AMAZON_SECRET_ACCESS_KEY=your-amazon-client-secret
AMAZON_SELLER_ID=your-amazon-seller-id
AMAZON_REFRESH_TOKEN=your-amazon-refresh-token

# AWS IAM Credentials for SP-API
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=eu-west-1

# Amazon Marketplace Settings
AMAZON_MARKETPLACE_ID=A1F83G8C2ARO7P  # UK marketplace
AMAZON_REGION=eu-west-1

# Oxylabs Proxy Configuration (Optional)
OXYLABS_USERNAME=your-oxylabs-username
OXYLABS_PASSWORD=your-oxylabs-password

# Telegram Bot Configuration (Optional - for notifications)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token  # Get from @BotFather on Telegram

# Cron Job Security (for self-hosted deployments)
CRON_SECRET=your-cron-secret-key
NEXT_PUBLIC_SITE_URL=http://localhost:3000  # URL where your app is accessible

# Configuration Options
KEEPA_DOMAIN=2               # 2 = UK, 1 = US, 3 = DE
PROXY_RATE_LIMIT=30          # Requests per minute per proxy
SELLER_RATE_LIMIT=10         # Requests per minute per seller
MAX_PAGES=20                 # Maximum pages to scrape per seller
MAX_RETRIES=3                # Maximum retries for failed requests